<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dictaphone_center"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <LinearLayout
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/colorBlueStandard"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ImageButton
        android:background="@android:color/transparent"
        android:id="@+id/actionButtonPLayer"
        android:layout_marginStart="12dp"
        android:layout_width="34dp"
        android:layout_height="34dp"/>
    <RelativeLayout
        android:id="@+id/circleBackground"
        android:layout_centerInParent="true"
        android:padding="1dp"
        android:background="@drawable/simple_shape"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/actionButtonPLayer"
        android:layout_width="25dp"
        android:layout_height="25dp">

        <ImageView
            android:id="@+id/circleFilled"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_centerInParent="true"
            android:animateLayoutChanges="true"
            android:background="@drawable/g_record" />
    </RelativeLayout>
    <TextView
        android:id="@+id/statusRecording"
        android:text="Статус записи"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/circleBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</merge>
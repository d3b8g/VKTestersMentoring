<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundShapeColorTint"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_alignParentEnd="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="36dp"
        android:rotation="40"
        android:textSize="16sp"
        android:textColor="@color/colorGray"
        android:fontFamily="@font/pottaone"
        android:text="happy testing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="36dp"
        android:rotation="15"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="56dp"
        android:textSize="16sp"
        android:textColor="@color/colorGray"
        android:fontFamily="@font/pottaone"
        android:text="learning more than u can"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="126dp"
        android:rotation="-15"
        android:layout_marginBottom="56dp"
        android:textSize="16sp"
        android:textColor="@color/colorGray"
        android:fontFamily="@font/pottaone"
        android:text="try HARD! QA HARD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/splash_avatar"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_launcher"
        app:civ_border_width="1dp" />
    <TextView
        android:layout_centerVertical="true"
        android:layout_below="@id/splash_avatar"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_centerVertical="true"
        android:layout_below="@id/splash_avatar"
        android:textStyle="bold"
        android:textColor="@color/colorBlueStandard"
        android:textSize="20dp"
        android:layout_marginTop="54dp"
        android:gravity="center"
        android:text="/testpool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
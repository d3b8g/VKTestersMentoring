<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/custom_background_gallery"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment"
    android:orientation="vertical">

    <TextView
        android:layout_margin="16dp"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:text="@string/menu_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/gallery_count"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginEnd="16dp"
            android:text="У меня 16 медиафайлов."
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@android:color/white"
            android:id="@+id/user_img_gallery"
            android:layout_width="65dp"
            android:layout_height="65dp"/>
    </LinearLayout>
    <Button
        android:layout_marginTop="82dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="24sp"
        android:text="Аудиозаписи"
        android:background="@drawable/btn_shape"
        android:id="@+id/open_gallery_dicto"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/rcv_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/gallery_plug"
        android:layout_margin="28dp"
        android:text="Нажми на кнопку, чтобы расскрыть список медиафайлов."
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
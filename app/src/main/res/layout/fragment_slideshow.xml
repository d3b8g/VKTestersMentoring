<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/custom_background_gallery"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/gallery_count"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginEnd="16dp"
            android:text="У меня 0 медиафайлов."
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@android:color/white"
            android:id="@+id/user_img_gallery"
            android:layout_width="65dp"
            android:layout_height="65dp"/>
    </LinearLayout>
    <Button
        android:textAllCaps="false"
        android:layout_gravity="right"
        android:layout_marginTop="92dp"
        android:gravity="center"
        android:id="@+id/media_type"
        android:layout_width="180dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/btn_sq_shape"
        android:layout_height="60dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="28dp"
        android:visibility="gone"
        android:id="@+id/rcv_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/gallery_plug"
        android:layout_margin="26dp"
        android:text="Нажми на кнопку, чтобы раскрыть список медиафайлов."
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/rcv_plug"
        android:layout_marginTop="18dp"
        android:weightSum="5"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_weight="1"
            android:src="@drawable/ic_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/rcv_plug_text"
            android:padding="4dp"
            android:layout_weight="3"
            android:text="Вы еще не записали ни одного аудио, хотите исправить это? "
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:textColor="@color/colorBlueStandard"
            android:textSize="13sp"
            android:textAllCaps="false"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:id="@+id/go_to_dictophone"
            android:text="Записать"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>